<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Portfolio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royal_blue</item>
        <item name="colorPrimaryVariant">@color/light_steel_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/lightBackground</item>

        <item name="android:ambientShadowAlpha">0.02</item>
        <item name="android:spotShadowAlpha">0.02</item>
    </style>

    <style name="AppBackground">
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="BottomNavStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TitleTheme">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/sharp_sans</item>
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round_top_solid_white</item>
    </style>

    <style name="AboutMeDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="android:buttonStyle">@style/AboutMeCustomDialogButton</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="AboutMeCustomDialogButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Section Title Start -->

    <style name="Title">
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="SectionTitle">
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="SectionTitle.Subtitle">
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
    <!-- Section Title End -->

    <!-- Section Caption Start -->
    <style name="Caption">
        <item name="android:textSize">@dimen/textSize_12</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
    <!-- Section Caption End -->

</resources>