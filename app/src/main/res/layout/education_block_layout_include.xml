<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginPadding_16"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:cardCornerRadius="@dimen/marginPadding_8"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/expImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/marginPadding_16"
                android:layout_marginTop="@dimen/marginPadding_16"
                android:layout_marginBottom="@dimen/marginPadding_16"
                android:src="@drawable/subject"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/marginPadding_16"
                app:layout_constraintStart_toEndOf="@id/expImageView"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center|start"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/companyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sharp_sans"
                    android:text="bidorbuy"
                    android:textColor="?attr/colorOnSecondary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/expImageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/positionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginPadding_4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Android Developer"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textSize_10"
                    app:layout_constraintStart_toEndOf="@id/expImageView"
                    app:layout_constraintTop_toBottomOf="@id/companyTextView" />

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
