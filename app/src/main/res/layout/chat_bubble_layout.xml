<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/leftBubbleTextView"
            style="@style/Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginPadding_32"
            android:layout_marginTop="@dimen/marginPadding_8"
            android:layout_marginBottom="@dimen/marginPadding_8"
            android:background="@drawable/left_chat_bubble_bg"
            android:paddingStart="@dimen/marginPadding_16"
            android:paddingTop="@dimen/marginPadding_10"
            android:paddingEnd="@dimen/marginPadding_10"
            android:paddingBottom="@dimen/marginPadding_10"
            android:textAlignment="textStart"
            android:textColor="?attr/colorOnSecondary"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"
            tools:visibility="visible"
            tools:text="Hello there and this is some more text to test something" />

        <TextView
            android:id="@+id/rightBubbleTextView"
            style="@style/Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginPadding_8"
            android:layout_marginEnd="@dimen/marginPadding_32"
            android:layout_marginBottom="@dimen/marginPadding_8"
            android:background="@drawable/right_chat_bubble_bg"
            android:paddingStart="@dimen/marginPadding_10"
            android:paddingTop="@dimen/marginPadding_10"
            android:paddingEnd="@dimen/marginPadding_16"
            android:paddingBottom="@dimen/marginPadding_10"
            android:textAlignment="textEnd"
            android:textColor="?attr/colorOnSecondary"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"
            tools:text="Hello there and this is some more text to test something" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
